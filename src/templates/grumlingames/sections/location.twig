{% set class = section.class|default('') %}

<section class="location {{ class }} padding-top--xxl padding-bottom--xxl theme2">
    <div class="u-wrapper padding-top--xxl">
        <h2 class="title2 padding-bottom--xxl margin-bottom--xxl t-display u-align-center">{{ 'location.title'|trans }}</h2>
        <div class="location__columns-wrapper padding-bottom--xxl">
            <div class="location__column location__column-map">
                <iframe class="content" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d748.1483858425838!2d2.1565743293609616!3d41.4046326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a4a2bcf44e357b%3A0x25b7a875796ca81b!2sCalle%20Or%2C%2025%2C%2008012%20Barcelona!5e0!3m2!1ses!2ses!4v1657890092927!5m2!1ses!2ses" width="735" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <div class="location__column">
                <div class="location__textual">
                    <h3 class="title3">{{ 'location.address.title'|trans }}</h3>
                    <p>{{ 'location.address.complementary'|trans }}</p>
                    <p class="u-bold">{{ 'location.address.address'|trans }}</p>
                    <p class="u-bold">{{ 'location.address.phone'|trans }}</p>
                </div>
            </div>
        </div>
    </div>
</section>