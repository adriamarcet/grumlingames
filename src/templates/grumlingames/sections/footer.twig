<footer class="footer theme1">
    <div class="footer__colophon">
        <div class="footer__colophon-wrapper u-wrapper">
            <div class="footer__colophon-column">
                <div class="footer__logo">
                    <a href="{{ link('index') }}" class="u-flex">
                        <span class="u-sr-only">{{ 'header.link_main_page'|trans }}</span>
                    </a>
                </div>
                <div>
                    <p class="u-flex">{{ siteName }}</p>
                </div>
                <ul class="" label="{{ 'footer.contact_info'|trans }}">
                    <li class="p-small">{{ 'footer.address.sentence_1'|trans }}</li>
                    <li class="p-small">{{ 'footer.address.sentence_2'|trans }}</li>
                </ul>
            </div>
            <div class="footer__colophon-column">
                <div class="footer__languages">
                    <p id="languages-title" class="footer__languages-title">{{ 'footer.languages_title'|trans }}</p>
                    <ul class="u-flex u-flex--justify-center">
                        <li><a href="./" class="footer__language-item" lang="en">{{ 'a11y.language_switcher.en'|trans }}</a></li>
                        <li><a href="{{ transRoute(pageName, 'es') }}" class="footer__language-item" lang="es">{{ 'a11y.language_switcher.es'|trans }}</a></li>
                        <li><a href="{{ transRoute(pageName, 'ca') }}" class="footer__language-item" lang="ca">{{ 'a11y.language_switcher.ca'|trans }}</a></li>
                    </ul>
                </div>
                <ul class="footer__socials">
